<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/day_view"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/colorPrimary"
	tools:context="com.example.jonat.scheduleapp2.MainActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/my_toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="@color/colorPrimaryDark"
		android:elevation="4dp"
		android:titleTextAppearance="@color/white"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
	
	<android.support.constraint.ConstraintLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<Button
			android:id="@+id/p1"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textColor="#ffffff"
			android:background="@color/colorPrimary"
			app:layout_constraintBottom_toTopOf="@+id/p2"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

		<Button
			android:id="@+id/p2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textColor="#ffffff"
			android:background="@color/colorPrimary"
			app:layout_constraintBottom_toTopOf="@+id/p3"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/p1"/>

		<Button
			android:id="@+id/p3"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textColor="#ffffff"
			android:background="@color/colorPrimary"
			app:layout_constraintBottom_toTopOf="@+id/p4"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/p2"/>

		<Button
			android:id="@+id/p4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textColor="#ffffff"
			android:background="@color/colorPrimary"
			app:layout_constraintBottom_toTopOf="@+id/p5"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/p3"/>

		<Button
			android:id="@+id/p5"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:textColor="#ffffff"
			android:background="@color/colorPrimary"
			app:layout_constraintTop_toBottomOf="@id/p4"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintRight_toRightOf="parent"/>

		<TextView
			android:id="@+id/time1"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginStart="10dp"
			android:text="@string/time1"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p1"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/time2"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginStart="10dp"
			android:text="@string/time2"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p2"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/time3"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginStart="10dp"
			android:text="@string/time3"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p3"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/time4"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginStart="10dp"
			android:text="@string/time4"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p4"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/time5"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginStart="10dp"
			android:text="@string/time5"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p5"
			app:layout_constraintLeft_toLeftOf="parent"/>

		<TextView
			android:id="@+id/lunch"
			android:layout_width="fill_parent"
			android:layout_height="0dp"
			android:layout_marginEnd="10dp"
			android:textColor="@color/white"
			app:layout_constraintBottom_toBottomOf="@id/p4"
			app:layout_constraintRight_toRightOf="parent"/>

	</android.support.constraint.ConstraintLayout>

	<android.support.design.widget.BottomNavigationView
		android:id="@+id/navigation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:background="@color/colorPrimaryDark"
		app:menu="@menu/navigation"/>

</LinearLayout>
