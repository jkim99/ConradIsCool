<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
											 android:background="#cccc24"
                                             tools:context="com.example.jonat.scheduleapp.MainActivity">
    <TextView
		android:id="@+id/day"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:textColor="#ffffff"
		android:background="#000000"
		android:textSize="42sp"
		android:textAlignment="center"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/date"/>
    <TextView
		android:id="@+id/date"
		android:layout_width="0dp"
		android:layout_height="80dp"
		android:textColor="#ffffff"
		android:background="#0c205f"
		android:textSize="42sp"
		android:textAlignment="center"
		app:layout_constraintLeft_toRightOf="@+id/day"
		app:layout_constraintRight_toRightOf="parent"/>
    <Button
		android:id="@+id/currentClass"
		android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:textColor="#ffffff"
		android:background="#424242"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/day"
		app:layout_constraintBottom_toTopOf="@+id/nextClass"/>
    <Button
		android:id="@+id/nextClass"
		android:layout_width="fill_parent"
		android:layout_height="200dp"
		android:textColor="#ffffff"
		android:background="#424242"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/currentClass"
		app:layout_constraintBottom_toTopOf="@+id/search"/>
    <Button
		android:id="@+id/search"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		android:background="#e7f312"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/toggle"/>
    <Button
		android:id="@+id/toggle"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#e7f312"
		android:onClick="dayView"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/search"
		app:layout_constraintRight_toLeftOf="@+id/settings"/>
	<Button
		android:id="@+id/settings"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#e7f312"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/toggle"
		app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
