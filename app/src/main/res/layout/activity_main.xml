<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
											 android:background="?android:attr/selectableItemBackground"
                                             tools:context="com.example.jonat.scheduleapp.MainActivity">
    <TextView
		android:id="@+id/day"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:textColor="#1663bb"
		android:background="#171717"
		android:textSize="24sp"
		android:textAlignment="center"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/dayweek"/>
	<TextView
		android:id="@+id/dayweek"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:textColor="#d4e51f"
		android:background="#171717"
		android:textSize="24sp"
		android:textAlignment="center"
		app:layout_constraintLeft_toRightOf="@+id/day"
		app:layout_constraintRight_toLeftOf="@+id/date"/>
    <TextView
		android:id="@+id/date"
		android:layout_width="0dp"
		android:layout_height="50dp"
		android:textColor="#ffffff"
		android:background="#171717"
		android:textSize="24sp"
		android:textAlignment="center"
		app:layout_constraintLeft_toRightOf="@+id/dayweek"
		app:layout_constraintRight_toRightOf="parent"/>
    <Button
		android:id="@+id/currentClass"
		android:layout_width="fill_parent"
		android:layout_height="270dp"
		android:textColor="#ffffff"
		android:background="#212121"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/day"
		app:layout_constraintBottom_toTopOf="@+id/nextClass"/>
    <Button
		android:id="@+id/nextClass"
		android:layout_width="fill_parent"
		android:layout_height="270dp"
		android:textColor="#ffffff"
		android:background="#212121"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/currentClass"
		app:layout_constraintBottom_toTopOf="@+id/search"/>
    <Button
		android:id="@+id/search"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		android:background="#171717"
		android:textColor="#ffffff"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@+id/toggle"/>
    <Button
		android:id="@+id/toggle"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#171717"
		android:textColor="#ffffff"
		android:onClick="dayView"
		android:transitionName="profile"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/search"
		app:layout_constraintRight_toLeftOf="@+id/settings"/>
	<Button
		android:id="@+id/settings"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="#171717"
		android:textColor="#ffffff"
		app:layout_constraintTop_toBottomOf="@+id/nextClass"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/toggle"
		app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
