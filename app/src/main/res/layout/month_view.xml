<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/day_view"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/colorPrimaryDark"
	android:elevation="20dp"
	tools:context="sked.official.jonat.scheduleapp2.MainActivity">

		<CalendarView
			android:id="@+id/calendarView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:layout_gravity="center_horizontal"
			android:weekDayTextAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Title.Inverse"
			android:dateTextAppearance="@android:style/TextAppearance.Material.Widget.ActionMode.Subtitle.Inverse"/>

</LinearLayout>
