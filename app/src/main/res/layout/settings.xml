<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/settings"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#212121"
	tools:context="com.example.jonat.scheduleapp2.MainActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/my_toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="#212121"
		android:elevation="4dp"
		android:title="@string/title_settings"
		android:titleTextAppearance="@color/white"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<android.support.constraint.ConstraintLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
		<TextView
			android:id="@+id/general_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="General"
			android:textSize="24sp"
			android:textColor="@color/white"
			android:layout_marginTop="30dp"
			android:layout_marginStart="26dp"
			android:layout_marginEnd="53dp"
			app:layout_constraintTop_toTopOf="parent"/>
		<Switch
			android:id="@+id/notification"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Notifications"
			android:textColor="@color/white"
			android:layout_marginTop="30dp"
			android:layout_marginStart="53dp"
			android:layout_marginEnd="53dp"
			app:layout_constraintTop_toBottomOf="@id/general_text"
			app:layout_constraintRight_toRightOf="parent"/>
		<TextView
			android:id="@+id/default_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Default Screen"
			android:textSize="24sp"
			android:textColor="@color/white"
			android:layout_marginTop="30dp"
			android:layout_marginStart="26dp"
			android:layout_marginEnd="53dp"
			app:layout_constraintTop_toBottomOf="@id/notification"/>
		<TextView
			android:id="@+id/current_view_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Current View"
			android:textColor="@color/white"
			android:layout_marginStart="53dp"
			android:layout_marginEnd="53dp"
			android:layout_marginTop="20dp"
			app:layout_constraintTop_toBottomOf="@id/default_text"/>
		<TextView
			android:id="@+id/day_view_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Day View"
			android:textColor="@color/white"
			android:layout_marginStart="53dp"
			android:layout_marginEnd="53dp"
			android:layout_marginTop="20dp"
			app:layout_constraintTop_toBottomOf="@id/current_view_text"/>
		<TextView
			android:id="@+id/month_view_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Month View"
			android:textColor="@color/white"
			android:layout_marginStart="53dp"
			android:layout_marginEnd="53dp"
			android:layout_marginTop="20dp"
			app:layout_constraintTop_toBottomOf="@id/day_view_text"/>
		<RadioGroup
			android:id="@+id/default_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:layout_marginEnd="53dp"
			app:layout_constraintTop_toBottomOf="@id/default_text"
			app:layout_constraintRight_toRightOf="parent">

			<RadioButton
				android:id="@+id/current_view_option"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layoutDirection="rtl"/>

			<RadioButton
				android:id="@+id/day_view_option"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layoutDirection="rtl"/>

			<RadioButton
				android:id="@+id/month_view_option"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layoutDirection="rtl"/>
		</RadioGroup>


	</android.support.constraint.ConstraintLayout>

	<android.support.design.widget.BottomNavigationView
		android:id="@+id/navigation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:background="#171717"
		app:menu="@menu/navigation"/>

</LinearLayout>